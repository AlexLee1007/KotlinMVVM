<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CoroutinesAboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/view_header" />

        <Button
            android:id="@+id/btn_http"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="模拟网络请求" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_timeout"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_weight="1"
                android:text="模拟方法回调超时" />

            <Button
                android:id="@+id/btn_not_timeout"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_weight="1"
                android:text="模拟方法回调不超时" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start_plan"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_weight="1"
                android:text="开始当前任务" />

            <Button
                android:id="@+id/btn_cancel_plan"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_weight="1"
                android:text="结束当前任务" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>